#sidebar

  %h2 Current playlist
  .spinner= image_tag "spinner.gif"
  %ul#queue
    - @songs.each do |song|
      %li{:id => "song_#{song.id}"}
        = song.title
        %small
          %a.remove_from_playlist{:href => '#', :id => song.id} Remove

  %h2 Add a new 
  %form#video_search
    %p
      %input{:type => "text", :name => "query", :id => "query"}
      %input{:type => "submit", :value => "Buscar"}
  %ul#results
